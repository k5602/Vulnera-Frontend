---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import FeatureCard from '../components/FeatureCard.astro';
import StatsCard from '../components/StatsCard.astro';
import '../styles/global.css';

// Feature card data
const features = [
    {
        title: "REAL_TIME_SCANNING",
        description: "Async Rust-powered vulnerability detection across multiple ecosystems with concurrent processing",
        icon: `<svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>`,
        hoverColorClass: "hover:bg-cyber-950/20 hover:shadow-cyber-400/20"
    },
    {
        title: "AGGREGATED_INTEL", 
        description: "Unified threat intelligence from OSV, NVD, and GitHub Security Advisories databases",
        icon: `<svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
        </svg>`,
        hoverColorClass: "hover:bg-matrix-950/20 hover:shadow-matrix-400/20"
    },
    {
        title: "ZERO_TRUST_API",
        description: "Secure-by-default architecture with rate limiting, input validation, and comprehensive logging", 
        icon: `<svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>`,
        hoverColorClass: "hover:bg-red-950/20 hover:shadow-red-400/20"
    }
];

// Stats data
const stats = [
    { value: "8", label: "ECOSYSTEMS_SUPPORTED", valueColor: "text-cyber-400" },
    { value: "3", label: "INTEL_SOURCES", valueColor: "text-matrix-400" },
    { value: "99.9%", label: "UPTIME_SLA", valueColor: "text-yellow-400" },
    { value: "<50ms", label: "RESPONSE_TIME", valueColor: "text-red-400" }
];
---

<Layout>
    <Navigation />

    <!-- Hero Section -->
    <section id="main" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black" aria-labelledby="hero-title">
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
            <!-- Matrix Rain Effect -->
            <div class="absolute inset-0 matrix-rain opacity-30"></div>
            <!-- Cyber Grid Overlay -->
            <div class="absolute inset-0 bg-gradient-to-r from-black via-black/80 to-black/60"></div>
            <!-- Terminal Green Glow -->
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-matrix-900/20 to-black/80"></div>
        </div>

        <!-- Hero Content -->
        <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
            <div class="max-w-5xl mx-auto">
                <!-- Terminal Prompt Style -->
                <div class="mb-4 text-left">
                    <span class="text-cyber-400 font-mono text-lg">root@vulnera:~$</span>
                    <span class="text-white font-mono text-lg animate-terminal">_</span>
                </div>
                
                <!-- Main Heading -->
                <h1 id="hero-title" class="text-4xl md:text-6xl lg:text-8xl font-bold text-white mb-6 animate-fade-in font-mono tracking-wider">
                    <span class="text-cyber-400">&gt;</span> VULNERA
                    <br>
                    <span class="bg-gradient-to-r from-matrix-400 to-cyber-400 bg-clip-text text-transparent glow">
                        SECURITY_SCANNER
                    </span>
                </h1>

                <!-- Terminal Output Style Subtitle -->
                <div class="text-left max-w-4xl mx-auto mb-8 terminal-border bg-black/80 p-6 rounded-lg font-mono">
                    <div class="text-cyber-400 mb-2"># System Information</div>
                    <div class="text-matrix-300 text-lg leading-relaxed">
                        <span class="text-cyber-300">Status:</span> <span class="text-matrix-400">ACTIVE</span><br>
                        <span class="text-cyber-300">Mode:</span> <span class="text-yellow-400">HIGH_PERFORMANCE_ANALYSIS</span><br>
                        <span class="text-cyber-300">Targets:</span> <span class="text-red-400">Multi-Ecosystem_Vulnerabilities</span><br>
                        <span class="text-cyber-300">Sources:</span> <span class="text-blue-400">OSV | NVD | GHSA</span>
                    </div>
                </div>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up">
                    <a href="http://localhost:3000/docs" target="_blank" rel="noopener" class="group inline-flex items-center justify-center bg-gradient-to-r from-cyber-600 to-matrix-600 hover:from-cyber-500 hover:to-matrix-500 text-black px-8 py-4 rounded-lg font-bold text-lg font-mono transition-all duration-300 transform hover:scale-105 terminal-border animate-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-cyber-400">
                        <span class="mr-2">&gt;</span> INIT_API_DOCS
                        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </a>
                    <a href="https://github.com/k5602/Vulnera" target="_blank" rel="noopener" class="group inline-flex items-center justify-center border-2 border-cyber-400 text-cyber-400 hover:bg-cyber-400/10 hover:shadow-lg hover:shadow-cyber-400/20 px-8 py-4 rounded-lg font-bold text-lg font-mono transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-cyber-400">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        ACCESS_REPO
                    </a>
                </div>
            </div>
        </div>

        <!-- Scanning Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
            <div class="flex flex-col items-center animate-bounce">
                <div class="text-cyber-400 font-mono text-sm mb-2">SCANNING...</div>
                <svg class="w-6 h-6 text-cyber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </div>
    </section>

    <!-- Feature Cards Section -->
    <section class="py-20 bg-black border-t border-cyber-500/30" aria-labelledby="features-title">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-16">
                <h2 id="features-title" class="text-4xl font-bold text-cyber-400 mb-4 font-mono tracking-wider">
                    &gt; SECURITY_FEATURES
                </h2>
                <p class="text-xl text-matrix-300 max-w-3xl mx-auto font-mono">
                    Advanced vulnerability analysis capabilities built for modern threat landscapes
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {features.map(feature => (
                    <FeatureCard 
                        title={feature.title}
                        description={feature.description}
                        icon={feature.icon}
                        hoverColorClass={feature.hoverColorClass}
                    />
                ))}
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-20 bg-gradient-to-r from-gray-950 to-black border-y border-cyber-500/30" aria-labelledby="stats-title">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-12">
                <h2 id="stats-title" class="text-3xl font-semibold text-cyber-400 font-mono tracking-wider">
                    &gt; THREAT_METRICS
                </h2>
            </div>
            <div class="grid md:grid-cols-4 gap-8 text-center">
                {stats.map(stat => (
                    <StatsCard 
                        value={stat.value}
                        label={stat.label}
                        valueColor={stat.valueColor}
                    />
                ))}
            </div>
        </div>
    </section>

    <Footer />
</Layout>

---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import FeatureCard from "../components/FeatureCard.astro";
import StatsCard from "../components/StatsCard.astro";
import "../styles/global.css";

// Feature card data
const features = [
    {
        title: "REAL_TIME_SCANNING",
        description:
            "Async Rust-powered vulnerability detection across multiple ecosystems with concurrent processing",
        icon: `<svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>`,
        hoverColorClass: "hover:bg-cyber-950/20 hover:shadow-cyber-400/20",
    },
    {
        title: "AGGREGATED_INTEL",
        description:
            "Unified threat intelligence from OSV, NVD, and GitHub Security Advisories databases",
        icon: `<svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
        </svg>`,
        hoverColorClass: "hover:bg-matrix-950/20 hover:shadow-matrix-400/20",
    },
    {
        title: "ZERO_TRUST_API",
        description:
            "Secure-by-default architecture with rate limiting, input validation, and comprehensive logging",
        icon: `<svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>`,
        hoverColorClass: "hover:bg-red-950/20 hover:shadow-red-400/20",
    },
];

// Stats data
const stats = [
    { value: "8", label: "ECOSYSTEMS_SUPPORTED", valueColor: "text-cyber-400" },
    { value: "3", label: "INTEL_SOURCES", valueColor: "text-matrix-400" },
    { value: "99.9%", label: "UPTIME_SLA", valueColor: "text-yellow-400" },
    { value: "<800ms", label: "RESPONSE_TIME", valueColor: "text-red-400" },
];

// ecosys data
const ecosystems = [
    {
        value: "PyPi",
        label: "requirements.txt / Pipfile / pyproject.toml",
        valueColor: "text-yellow-300",
    },
    {
        value: "Ruby",
        label: "Gemfile.lock / Gemfile",
        valueColor: "text-red-400",
    },
    {
        value: "npm",
        label: "package.json / package-lock.json / yarn.lock",
        valueColor: "text-yellow-500",
    },
    {
        value: "Rust",
        label: "Cargo.lock / Cargo.toml",
        valueColor: "text-orange-400",
    },
    {
        value: "Maven/Gradle",
        label: "pom.xml / build.gradle",
        valueColor: "text-matrix-400",
    },
    {
        value: ".NET",
        label: "packages.config / *.csproj *.props / *.targets",
        valueColor: "text-green-400",
    },
    { value: "Go", label: "go.mod / go.sum", valueColor: "text-cyber-400" },
    {
        value: "Packagist",
        label: "composer.json / composer.lock",
        valueColor: "text-purple-400",
    },
];
---

<Layout>
    <Navigation />

    <!-- Hero Section -->
    <section
        id="main"
        class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black"
        aria-labelledby="hero-title"
        transition:animate="fade"
    >
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 z-0">
            <!-- Matrix Rain Effect -->
            <div class="absolute inset-0 matrix-rain opacity-30"></div>
            <!-- Cyber Grid Overlay -->
            <div
                class="absolute inset-0 bg-gradient-to-r from-black via-black/80 to-black/60"
            >
            </div>
            <!-- Terminal Green Glow -->
            <div
                class="absolute inset-0 bg-gradient-to-b from-transparent via-matrix-900/20 to-black/80"
            >
            </div>
            <!-- Radial Focus -->
            <div
                class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,black_100%)] opacity-80"
            >
            </div>
        </div>

        <!-- HUD Elements (Decorative) -->
        <div
            class="absolute inset-0 z-0 overflow-hidden pointer-events-none select-none"
        >
            <div
                class="hud-ring w-[600px] h-[600px] opacity-20 animate-[rotate-slow_20s_linear_infinite]"
            >
            </div>
            <div
                class="hud-ring w-[500px] h-[500px] opacity-30 animate-[rotate-reverse-slow_15s_linear_infinite] border-dashed"
            >
            </div>
            <div
                class="hud-ring w-[700px] h-[700px] opacity-10 animate-[rotate-slow_30s_linear_infinite] border-dotted"
            >
            </div>
        </div>

        <!-- Hero Content -->
        <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 text-center">
            <div class="max-w-5xl mx-auto">
                <!-- Terminal Prompt Style -->
                <div
                    class="mb-3 sm:mb-4 text-left flex items-center gap-2 opacity-80"
                >
                    <span
                        class="text-cyber-400 font-mono text-sm sm:text-base lg:text-lg"
                        >root@vulnera:~$</span
                    >
                    <span
                        class="text-white font-mono text-sm sm:text-base lg:text-lg animate-terminal"
                        >_</span
                    >
                </div>

                <!-- Main Heading -->
                <h1
                    id="hero-title"
                    class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold text-white mb-6 sm:mb-8 animate-fade-in font-mono tracking-wider leading-tight"
                >
                    <span class="text-cyber-400">&gt;</span>
                    <span
                        class="glitch-intense inline-block"
                        data-text="VULNERA">VULNERA</span
                    >
                    <br />
                    <span
                        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl bg-gradient-to-r from-matrix-400 to-cyber-400 bg-clip-text text-transparent glow mt-2 block"
                    >
                        SECURITY_SCANNER
                    </span>
                </h1>

                <!-- Terminal Output Style Subtitle -->
                <div
                    class="text-left max-w-4xl mx-auto mb-8 sm:mb-12 terminal-border bg-black/90 p-0 rounded-lg font-mono overflow-hidden shadow-[0_0_30px_rgba(0,229,209,0.15)]"
                >
                    <!-- Terminal Header -->
                    <div
                        class="bg-cyber-950/30 px-4 py-2 border-b border-cyber-500/30 flex items-center justify-between"
                    >
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-red-500/80">
                            </div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500/80">
                            </div>
                            <div class="w-3 h-3 rounded-full bg-green-500/80">
                            </div>
                        </div>
                        <div class="text-xs text-cyber-400/60 font-mono">
                            bash — 80x24
                        </div>
                    </div>
                    <!-- Terminal Body -->
                    <div class="p-4 sm:p-6 space-y-2">
                        <div
                            class="text-cyber-400 mb-2 text-xs sm:text-sm border-b border-cyber-500/20 pb-2"
                        >
                            # System Information
                        </div>
                        <div
                            class="text-matrix-300 text-sm sm:text-base lg:text-lg leading-relaxed break-words font-mono"
                        >
                            <div>
                                <span class="text-cyber-500">➜</span>
                                <span class="text-cyber-300">Status:</span>
                                <span class="text-matrix-400 animate-pulse"
                                    >ACTIVE</span
                                >
                            </div>
                            <div>
                                <span class="text-cyber-500">➜</span>
                                <span class="text-cyber-300">Mode:</span>
                                <span
                                    class="text-yellow-400 break-anywhere sm:break-normal"
                                    >HIGH_PERFORMANCE_ANALYSIS</span
                                >
                            </div>
                            <div>
                                <span class="text-cyber-500">➜</span>
                                <span class="text-cyber-300">Targets:</span>
                                <span
                                    class="text-red-400 break-anywhere sm:break-normal"
                                    >Multi-Ecosystem_Vulnerabilities</span
                                >
                            </div>
                            <div>
                                <span class="text-cyber-500">➜</span>
                                <span class="text-cyber-300">Sources:</span>
                                <span class="text-blue-400"
                                    >OSV | NVD | GHSA</span
                                >
                            </div>
                            <div class="mt-4 text-cyber-400/50 animate-pulse">
                                _
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CTA Buttons -->
                <div
                    class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center animate-slide-up px-4"
                >
                    <a
                        href="/signup"
                        target="_self"
                        rel="noopener"
                        class="group inline-flex items-center justify-center bg-gradient-to-r from-cyber-600 to-matrix-600 hover:from-cyber-500 hover:to-matrix-500 text-black px-6 sm:px-8 py-3 sm:py-4 rounded-lg font-bold text-sm sm:text-base lg:text-lg font-mono transition-all duration-300 transform hover:scale-105 terminal-border animate-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-cyber-400"
                        data-astro-prefetch
                    >
                        <span class="mr-2">&gt;</span>GET_STARTED
                        <svg
                            class="w-4 h-4 sm:w-5 sm:h-5 ml-2 group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </a>
                    <a
                        href="https://k5602.github.io/Vulnera/"
                        target="_blank"
                        rel="noopener"
                        class="btn-scan group inline-flex items-center justify-center border-2 border-cyber-400 text-cyber-400 hover:bg-cyber-400/10 hover:shadow-[0_0_30px_rgba(0,229,209,0.3)] px-8 sm:px-10 py-4 sm:py-5 rounded-lg font-bold text-base sm:text-lg lg:text-xl font-mono transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-cyber-400"
                    >
                        <svg
                            class="w-5 h-5 sm:w-6 sm:h-6 mr-2"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                        Documentation
                    </a>
                </div>
            </div>
        </div>

        <!-- Scanning Indicator -->
        <div
            class="absolute bottom-6 sm:bottom-8 left-1/2 transform -translate-x-1/2 z-10 pointer-events-none"
        >
            <div class="flex flex-col items-center animate-bounce opacity-70">
                <div
                    class="text-cyber-400 font-mono text-xs sm:text-sm mb-2 tracking-[0.2em]"
                >
                    SYSTEM_READY
                </div>
                <svg
                    class="w-5 h-5 sm:w-6 sm:h-6 text-cyber-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </div>
    </section>

    <!-- Feature Cards Section -->
    <section
        class="py-12 sm:py-16 lg:py-20 bg-black border-t border-cyber-500/30"
        aria-labelledby="features-title"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6">
            <div class="text-center mb-12 sm:mb-16">
                <h2
                    id="features-title"
                    class="text-2xl sm:text-3xl lg:text-4xl font-bold text-cyber-400 mb-4 font-mono tracking-wider"
                >
                    &gt; SECURITY_FEATURES
                </h2>
                <p
                    class="text-base sm:text-lg lg:text-xl text-matrix-300 max-w-3xl mx-auto font-mono px-4"
                >
                    Advanced vulnerability analysis capabilities built for
                    modern threat landscapes
                </p>
            </div>

            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                {
                    features.map((feature) => (
                        <FeatureCard
                            title={feature.title}
                            description={feature.description}
                            icon={feature.icon}
                            hoverColorClass={feature.hoverColorClass}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Vulnero bot Section -->
    <section
        class="py-12 sm:py-16 lg:py-20 bg-black relative overflow-hidden border-t border-cyber-500/30"
    >
        <!-- Background Effects -->
        <div class="absolute inset-0 pointer-events-none">
            <div
                class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-cyber-900/10 to-transparent"
            >
            </div>
            <div
                class="absolute bottom-0 left-0 w-1/2 h-full bg-gradient-to-r from-matrix-900/10 to-transparent"
            >
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 relative z-10">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Text Content -->
                <div class="space-y-6">
                    <div
                        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-cyber-950/50 border border-cyber-500/30 text-cyber-400 text-xs font-mono"
                    >
                        <span
                            class="w-2 h-2 rounded-full bg-cyber-400 animate-pulse"
                        ></span>
                        VULNERA_AI_INTEGRATION
                    </div>

                    <h2
                        class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white font-mono tracking-tight"
                    >
                        <span class="text-cyber-400">&gt;</span> AI-POWERED
                        <br />
                        <span
                            class="bg-gradient-to-r from-cyber-400 to-matrix-400 bg-clip-text text-transparent"
                            >THREAT_ANALYSIS</span
                        >
                    </h2>

                    <p class="text-gray-400 text-lg leading-relaxed">
                        Leverage our advanced LLM integration to analyze complex
                        vulnerability chains, generate remediation scripts, and
                        explain security patches in plain English.
                    </p>

                    <ul class="space-y-4 font-mono text-sm sm:text-base">
                        <li class="flex items-start gap-3 text-gray-300">
                            <svg
                                class="w-6 h-6 text-cyber-400 shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            <span
                                >Automated patch generation & verification</span
                            >
                        </li>
                        <li class="flex items-start gap-3 text-gray-300">
                            <svg
                                class="w-6 h-6 text-cyber-400 shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            <span>Context-aware vulnerability explanation</span>
                        </li>
                        <li class="flex items-start gap-3 text-gray-300">
                            <svg
                                class="w-6 h-6 text-cyber-400 shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                            <span
                                >Interactive security assistant (VulneraBot)</span
                            >
                        </li>
                    </ul>

                    <div class="pt-4">
                        <a
                            href="/signup"
                            class="inline-flex items-center gap-2 text-cyber-400 hover:text-cyber-300 font-mono font-bold transition-colors group"
                        >
                            <span
                                class="border-b border-cyber-400 group-hover:border-cyber-300"
                                >TRY_AI_ANALYSIS</span
                            >
                            <svg
                                class="w-4 h-4 transform group-hover:translate-x-1 transition-transform"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Visual/Terminal -->
                <div class="relative">
                    <div
                        class="absolute -inset-1 bg-gradient-to-r from-cyber-500 to-matrix-500 rounded-lg blur opacity-20"
                    >
                    </div>
                    <div
                        class="relative bg-black border border-cyber-500/30 rounded-lg overflow-hidden shadow-2xl"
                    >
                        <!-- Terminal Header -->
                        <div
                            class="bg-gray-900/50 px-4 py-2 border-b border-cyber-500/20 flex items-center gap-2"
                        >
                            <div class="flex gap-1.5">
                                <div class="w-3 h-3 rounded-full bg-red-500/50">
                                </div>
                                <div
                                    class="w-3 h-3 rounded-full bg-yellow-500/50"
                                >
                                </div>
                                <div
                                    class="w-3 h-3 rounded-full bg-green-500/50"
                                >
                                </div>
                            </div>
                            <div class="ml-2 text-xs text-gray-500 font-mono">
                                vulnera-ai — analysis
                            </div>
                        </div>

                        <!-- Terminal Content -->
                        <div class="p-6 font-mono text-sm space-y-4">
                            <div class="flex gap-2">
                                <span class="text-cyber-400">➜</span>
                                <span class="text-white"
                                    >analyze CVE-2024-3094 --context=full</span
                                >
                            </div>

                            <div class="space-y-2 text-gray-400">
                                <div class="flex gap-2">
                                    <span class="text-matrix-400">[AI]</span>
                                    <span
                                        >Analyzing vulnerability context...</span
                                    >
                                </div>
                                <div class="flex gap-2">
                                    <span class="text-matrix-400">[AI]</span>
                                    <span
                                        >Identified backdoor in xz-utils
                                        (liblzma).</span
                                    >
                                </div>
                                <div class="pl-8 text-gray-500 text-xs">
                                    Impact: Critical (CVSS 10.0)
                                    <br />
                                    Vector: Network / RCE
                                </div>
                                <div class="flex gap-2 mt-4">
                                    <span class="text-matrix-400">[AI]</span>
                                    <span class="text-white"
                                        >Generated Remediation Plan:</span
                                    >
                                </div>
                                <div
                                    class="bg-gray-900/50 p-3 rounded border-l-2 border-cyber-500 text-cyber-300 text-xs"
                                >
                                    1. Downgrade xz-utils to version 5.4.6
                                    <br />
                                    2. Check system logs for unauthorized SSH access
                                    <br />
                                    3. Rotate SSH keys immediately
                                </div>
                            </div>

                            <div class="animate-pulse flex gap-2">
                                <span class="text-cyber-400">➜</span>
                                <span class="w-2 h-4 bg-cyber-400"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Ecosystems Section -->
    <section
        class="py-12 sm:py-16 lg:py-20 bg-gradient-to-r from-gray-950 to-black border-y border-cyber-500/30"
        aria-labelledby="stats-title"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6">
            <div class="text-center mb-8 sm:mb-12">
                <h2
                    id="stats-title"
                    class="text-2xl sm:text-3xl font-semibold text-cyber-400 font-mono tracking-wider"
                >
                    &gt; ECOSYSTEMS_SUPPORTED
                </h2>
            </div>
            <div
                class="grid grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 text-center"
            >
                {
                    ecosystems.map((ecosys) => (
                        <StatsCard
                            value={ecosys.value}
                            label={ecosys.label}
                            valueColor={ecosys.valueColor}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section
        class="py-12 sm:py-16 lg:py-20 bg-gradient-to-r from-gray-950 to-black border-y border-cyber-500/30"
        aria-labelledby="stats-title"
    >
        <div class="max-w-7xl mx-auto px-4 sm:px-6">
            <div class="text-center mb-8 sm:mb-12">
                <h2
                    id="stats-title"
                    class="text-2xl sm:text-3xl font-semibold text-cyber-400 font-mono tracking-wider"
                >
                    &gt; THREAT_METRICS
                </h2>
            </div>
            <div
                class="grid grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8 text-center"
            >
                {
                    stats.map((stat) => (
                        <StatsCard
                            value={stat.value}
                            label={stat.label}
                            valueColor={stat.valueColor}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <Footer />
    <script>
        import { organization } from "../modules/orgData";
        import { isAuthenticated } from "../utils/api/auth-store";
        if (isAuthenticated()) {
            if (organization.isOrganization) {
                window.location.href = "/orgdashboard";
            }else {

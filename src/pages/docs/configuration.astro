---
import DocsLayout from "../../layouts/DocsLayout.astro";
import { THEME_CLASSES } from "../../config/theme";
---

<DocsLayout
    title="Configuration - Vulnera Docs"
    description="Vulnera Configuration Guide"
>
    <div class="max-w-4xl">
        <div class="mb-8">
            <div class="text-cyber-400 font-mono text-sm mb-2">
                user@vulnera:~/docs$ cat configuration.md
            </div>
            <h1
                class="text-3xl md:text-4xl font-bold text-white mb-6 font-mono tracking-wider"
            >
                <span class="text-cyber-400">&gt;</span> CONFIGURATION
            </h1>
        </div>

        <div
            class={`${THEME_CLASSES.border} bg-black/80 p-8 rounded-lg font-mono space-y-6`}
        >
            <div class="text-cyber-400 mb-4"># Config Options</div>

            <p class="text-matrix-300 leading-relaxed mb-4">
                Configuration guide is coming soon.
            </p>
        </div>
    </div>
</DocsLayout>

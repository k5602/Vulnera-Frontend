---
import DocsLayout from "../../layouts/DocsLayout.astro";
import { THEME_CLASSES } from "../../config/theme";

const docSections = [
    {
        title: "OVERVIEW",
        description:
            "Learn about Vulnera's architecture, performance, and supported ecosystems.",
        href: "/docs/overview",
        icon: ">_",
    },
    {
        title: "GETTING_STARTED",
        description:
            "Quick start guide to integrating Vulnera API into your security workflow.",
        href: "/docs/getting-started",
        icon: "$",
    },
    {
        title: "API_REFERENCE",
        description:
            "Complete API documentation including endpoints, parameters, and response types.",
        href: "/docs/api",
        icon: "{}",
    },
    {
        title: "CONFIGURATION",
        description:
            "Configure scanners, rate limits, and data sources for your specific needs.",
        href: "/docs/configuration",
        icon: "~/",
    },
];
---

<DocsLayout
    title="Documentation - Vulnera"
    description="Vulnera Documentation Hub"
>
    <div class="mb-12">
        <div class="text-cyber-400 font-mono text-sm mb-2">
            user@vulnera:~/docs$ ls -la
        </div>
        <h1
            class="text-4xl md:text-5xl font-bold text-white mb-6 font-mono tracking-wider"
        >
            <span class="text-cyber-400">&gt;</span> DOCUMENTATION
        </h1>
        <p class="text-matrix-300 text-lg max-w-2xl leading-relaxed">
            Comprehensive guides and resources for the Vulnera vulnerability
            analysis platform.
        </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
        {
            docSections.map((section) => (
                <a href={section.href} class="group block">
                    <div
                        class={`h-full ${THEME_CLASSES.border} bg-black/80 p-6 rounded-lg font-mono transition-all duration-300 hover:bg-cyber-950/20 hover:shadow-[0_0_20px_rgba(0,229,209,0.15)] group-hover:border-cyber-400/50`}
                    >
                        <div class="flex items-start justify-between mb-4">
                            <span class="text-2xl text-cyber-400 font-bold">
                                {section.icon}
                            </span>
                            <span class="text-cyber-500/50 text-xs group-hover:text-cyber-400 transition-colors">
                                DIR
                            </span>
                        </div>
                        <h2 class="text-xl font-bold text-white mb-2 group-hover:text-cyber-400 transition-colors">
                            {section.title}
                        </h2>
                        <p class="text-matrix-300 text-sm leading-relaxed">
                            {section.description}
                        </p>
                        <div class="mt-4 flex items-center text-cyber-500 text-sm group-hover:text-cyber-300">
                            <span class="mr-2">
                                cd {section.title.toLowerCase()}
                            </span>
                            <span class="opacity-0 group-hover:opacity-100 transition-opacity">
                                _
                            </span>
                        </div>
                    </div>
                </a>
            ))
        }
    </div>
</DocsLayout>

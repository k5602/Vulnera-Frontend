---
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import ScanReportIsland from "../components/report/ScanReportIsland";
---

<script>
  import { userStore } from "../utils/store";

  const user = userStore.get();
  if (!user) {
    const currentPath = window.location.pathname;
    window.location.href = `/login?next=${encodeURIComponent(currentPath)}`;
  } else {
    // Start monitoring session for this protected page
  }
</script>

<Layout
  title="Scan â€” Vulnera"
  description="Upload manifests or import repositories for scanning."
>
  <!-- Server-side middleware handles auth -->

  <Navigation />

  <section
    id="main"
    class="relative min-h-screen overflow-hidden bg-[#050505]"
    aria-labelledby="scan-title"
    transition:animate="fade"
  >
    <!-- Background Layers -->
    <div class="absolute inset-0 z-0 pointer-events-none">
      <div
        class="absolute inset-0 opacity-[0.03]"
        style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 20px 20px;"
      >
      </div>
      <div
        class="absolute inset-0 bg-gradient-to-b from-black via-transparent to-black"
      >
      </div>
    </div>

    <!-- Content -->
    <div
      class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20"
    >
      <header class="mb-16 border-b border-white/10 pb-10 text-center">
        <div class="flex items-center justify-center gap-3 mb-6">
          <div
            class="w-3 h-3 bg-green-500 rounded-full animate-pulse shadow-[0_0_10px_rgba(34,197,94,0.5)]"
          >
          </div>
          <div
            class="text-green-500/80 font-mono text-sm tracking-widest uppercase mt-10"
          >
            System_Ready
          </div>
        </div>
        <h1
          id="scan-title"
          class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white font-mono tracking-tight mt-8 mb-6"
        >
          VULNERABILITY_SCANNER
        </h1>
        <p
          class="text-gray-400 mt-4 font-mono text-base sm:text-lg max-w-3xl mx-auto leading-relaxed"
        >
          Initiate deep analysis of dependency manifests or remote repositories.
          Our engine detects vulnerabilities, secrets, and compliance issues.
        </p>
      </header>

      <!-- AI Features Description -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <div
          class="bg-white/5 border border-white/10 rounded-lg p-8 hover:border-blue-500/50 hover:shadow-[0_0_30px_rgba(59,130,246,0.15)] transition-all duration-300 group"
        >
          <div class="flex items-center gap-4 mb-4">
            <div
              class="p-3 bg-blue-500/10 rounded-lg group-hover:bg-blue-500/20 transition-colors"
            >
              <svg
                class="w-7 h-7 text-blue-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3
              class="text-blue-400 font-mono text-base font-bold tracking-wider uppercase"
            >
              AI_Enrichment
            </h3>
          </div>
          <p class="text-gray-400 text-sm leading-relaxed font-mono">
            Context-aware vulnerability analysis providing impact assessment and
            false positive reduction.
          </p>
        </div>

        <div
          class="bg-white/5 border border-white/10 rounded-lg p-8 hover:border-purple-500/50 hover:shadow-[0_0_30px_rgba(168,85,247,0.15)] transition-all duration-300 group"
        >
          <div class="flex items-center gap-4 mb-4">
            <div
              class="p-3 bg-purple-500/10 rounded-lg group-hover:bg-purple-500/20 transition-colors"
            >
              <svg
                class="w-7 h-7 text-purple-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <h3
              class="text-purple-400 font-mono text-base font-bold tracking-wider uppercase"
            >
              Auto_Fix
            </h3>
          </div>
          <p class="text-gray-400 text-sm leading-relaxed font-mono">
            Automated patch generation for identified vulnerabilities using
            advanced LLM capabilities.
          </p>
        </div>
      </div>

      <!-- Tabbed Interface - MAIN SCAN BOX -->
      <div
        class="border-2 border-white/20 bg-black/70 backdrop-blur-md rounded-xl overflow-hidden shadow-[0_0_60px_rgba(139,92,246,0.1)] hover:shadow-[0_0_80px_rgba(139,92,246,0.15)] transition-shadow duration-500"
      >
        <!-- Tabs Header -->
        <div class="flex border-b border-white/10 bg-black/50">
          <button
            id="tab-import"
            class="flex-1 py-5 text-base font-mono font-bold uppercase tracking-wider transition-all border-b-2 border-purple-500 text-purple-400 bg-purple-500/5"
          >
            Import_GitHub_Repo
          </button>
          <button
            id="tab-upload"
            class="flex-1 py-5 text-base font-mono font-bold uppercase tracking-wider transition-all border-b-2 border-transparent text-gray-500 hover:text-gray-300 hover:bg-white/5"
          >
            Upload_Files
          </button>
        </div>

        <!-- Tab Content: Import -->
        <div id="content-import" class="p-10 sm:p-12 lg:p-16">
          <div class="max-w-4xl mx-auto">
            <div class="flex flex-col gap-8">
              <div class="relative group/input">
                <input
                  id="repo-url"
                  type="url"
                  placeholder="https://github.com/owner/repo"
                  class="w-full px-8 py-5 bg-black border-2 border-white/15 text-white placeholder-gray-600 font-mono text-lg focus:border-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500/30 focus:shadow-[0_0_30px_rgba(168,85,247,0.2)] transition-all rounded-lg"
                />
                <div
                  id="source-type-toggle"
                  class="absolute right-5 top-1/2 -translate-y-1/2 text-gray-500 hover:text-purple-400 cursor-pointer text-sm font-bold tracking-wider border border-white/10 hover:border-purple-500/50 bg-white/5 hover:bg-purple-500/10 px-3 py-1.5 rounded-md transition-all select-none"
                  title="Click to switch source"
                >
                  GIT
                </div>
              </div>

              <!-- Private Repo & Token Input -->
              <div class="bg-white/5 border border-white/10 rounded-lg p-6">
                <label
                  class="flex items-center gap-4 cursor-pointer group/check select-none mb-0"
                >
                  <div class="relative">
                    <input
                      type="checkbox"
                      id="chk-private-repo"
                      class="peer sr-only"
                    />
                    <div
                      class="w-6 h-6 border-2 border-gray-600 rounded-md bg-black peer-checked:bg-purple-600 peer-checked:border-purple-500 transition-all"
                    >
                    </div>
                    <svg
                      class="absolute inset-0 w-6 h-6 text-white opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none p-1"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="text-base text-gray-300 font-mono group-hover/check:text-white transition-colors"
                    >Private Repository</span
                  >
                </label>

                <div
                  id="token-input-container"
                  class="hidden mt-6 pt-6 border-t border-white/10 animate-fade-in"
                >
                  <label
                    id="auth-token-label"
                    for="github-token-input"
                    class="block text-sm text-purple-400 font-mono mb-3 uppercase tracking-wider"
                    >GitHub Token (PAT)</label
                  >
                  <input
                    id="github-token-input"
                    type="password"
                    placeholder="ghp_..."
                    class="w-full px-5 py-4 bg-black border-2 border-purple-500/30 text-white placeholder-gray-700 font-mono text-base focus:border-purple-500 focus:outline-none focus:ring-2 focus:ring-purple-500/30 transition-all rounded-lg"
                  />
                  <p class="text-xs text-gray-500 mt-3 font-mono">
                    Token is used only for this scan and not stored.
                  </p>
                </div>
              </div>

              <div class="flex flex-col sm:flex-row items-center gap-8 mt-4">
                <!-- Analysis Depth Selection -->
                <div class="flex flex-col gap-3 flex-1 w-full">
                  <span
                    class="text-xs text-gray-500 font-mono uppercase tracking-widest font-bold"
                    >Analysis Depth</span
                  >
                  <div class="grid grid-cols-3 gap-3">
                    <button
                      data-analysis-depth="minimal"
                      class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-3.5 font-mono text-xs font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-lg"
                    >
                      MINIMAL
                    </button>
                    <button
                      data-analysis-depth="standard"
                      class="analysis-depth-btn active border-2 border-purple-500/50 bg-purple-500/10 text-purple-400 py-3.5 font-mono text-xs font-bold transition-all uppercase rounded-lg"
                    >
                      STANDARD
                    </button>
                    <button
                      data-analysis-depth="full"
                      class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-3.5 font-mono text-xs font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-lg"
                    >
                      FULL
                    </button>
                  </div>
                </div>

                <button
                  id="btn-import"
                  class="w-full sm:w-auto px-12 bg-purple-600 hover:bg-purple-500 text-black font-bold py-4 font-mono text-base transition-all uppercase tracking-wider flex items-center justify-center gap-3 rounded-lg h-[54px] mt-auto shadow-[0_0_20px_rgba(168,85,247,0.3)] hover:shadow-[0_0_40px_rgba(168,85,247,0.5)]"
                >
                  <span class="text-xl">ðŸš€</span>
                  <span>IMPORT_AND_SCAN</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Tab Content: Upload -->
        <div id="content-upload" class="hidden p-10 sm:p-12 lg:p-16">
          <div class="max-w-4xl mx-auto">
            <!-- Dropzone -->
            <div
              id="dropzone"
              class="relative border-2 border-dashed border-white/15 bg-black/30 hover:bg-white/5 hover:border-cyan-500/50 transition-all group/drop cursor-pointer flex flex-col items-center justify-center p-16 rounded-xl"
            >
              <div
                class="text-gray-600 mb-6 group-hover/drop:text-cyan-500 transition-colors transform group-hover/drop:scale-110 duration-300"
              >
                <svg
                  class="w-20 h-20"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1"
                    d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                  ></path>
                </svg>
              </div>
              <p class="text-gray-300 text-lg font-mono mb-3 font-bold">
                Drag & drop manifests here
              </p>
              <p class="text-gray-600 text-sm font-mono mb-8">
                package.json, requirements.txt, pom.xml
              </p>

              <input id="file-input" type="file" class="sr-only" multiple />
              <label
                for="file-input"
                id="btn-select"
                class="cursor-pointer bg-white/5 border-2 border-white/15 text-cyan-400 px-8 py-3.5 rounded-lg font-mono text-sm font-bold hover:bg-cyan-500/10 hover:border-cyan-500 transition-all uppercase"
              >
                BROWSE_FILES
              </label>
            </div>

            <!-- File List -->
            <div class="mt-8 min-h-[20px]">
              <ul
                id="file-list"
                class="text-gray-400 text-sm font-mono space-y-3 max-h-56 overflow-y-auto custom-scrollbar"
              >
              </ul>
            </div>

            <div class="mt-10 flex flex-col sm:flex-row items-center gap-8">
              <!-- Analysis Depth Selection -->
              <div class="flex flex-col gap-3 flex-1 w-full">
                <span
                  class="text-xs text-gray-500 font-mono uppercase tracking-widest font-bold"
                  >Analysis Depth</span
                >
                <div class="grid grid-cols-3 gap-3">
                  <button
                    data-analysis-depth="minimal"
                    class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-3.5 font-mono text-xs font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-lg"
                  >
                    MINIMAL
                  </button>
                  <button
                    data-analysis-depth="standard"
                    class="analysis-depth-btn active border-2 border-cyan-500/50 bg-cyan-500/10 text-cyan-400 py-3.5 font-mono text-xs font-bold transition-all uppercase rounded-lg"
                  >
                    STANDARD
                  </button>
                  <button
                    data-analysis-depth="full"
                    class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-3.5 font-mono text-xs font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-lg"
                  >
                    FULL
                  </button>
                </div>
              </div>

              <div class="flex gap-4 w-full sm:w-auto mt-auto">
                <button
                  id="btn-reset-files"
                  class="px-5 py-4 border-2 border-red-500/30 text-red-500 hover:bg-red-500/10 font-mono text-sm font-bold transition-all uppercase rounded-lg"
                  title="Clear Files"
                >
                  CLR
                </button>

                <button
                  id="btn-scan"
                  class="flex-1 sm:flex-none px-12 bg-cyan-600 hover:bg-cyan-500 text-black font-bold py-4 font-mono text-base transition-all uppercase tracking-wider flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed rounded-lg shadow-[0_0_20px_rgba(6,182,212,0.3)] hover:shadow-[0_0_40px_rgba(6,182,212,0.5)]"
                >
                  <span>SCAN_FILES</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Report Island Mount -->
    <div class="mt-0 bg-[#050505] pb-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <ScanReportIsland client:idle />
      </div>
    </div>
  </section>

  <Footer />

  <script>
    import { ScanHandler } from "../modules/scanModule";

    const scanHandler = new ScanHandler(
      document.getElementById("dropzone")!,
      document.getElementById("file-input")! as HTMLInputElement,
      document.getElementById("file-list")!,
      document.getElementById("btn-scan")! as HTMLButtonElement,
      document.getElementById("btn-import")! as HTMLButtonElement,
      document.getElementById("btn-reset-files")! as HTMLButtonElement,
      document.getElementById("repo-url")! as HTMLInputElement,
      document.getElementById("chk-private-repo")! as HTMLInputElement,
      document.getElementById("github-token-input")! as HTMLInputElement,
      document.getElementById("auth-token-label")! as HTMLElement,
      document.getElementById("source-type-toggle")! as HTMLElement,
      document.querySelectorAll(".detail-level-btn"),
      document.querySelectorAll(".analysis-depth-btn"),
    );

    function initializeHandlers() {
      // Disable browser default file-open on drop anywhere
      document.addEventListener("dragover", (e) => e.preventDefault());
      document.addEventListener("drop", (e) => e.preventDefault());

      // Handle detail level selection
      scanHandler.addActiveBTNDetailClass();

      // Handle analysis depth selection
      scanHandler.addActiveBTNAnalysisClass();

      scanHandler.renderFiles();

      // Drag and drop handlers
      scanHandler.dragAndDropSetup();
      scanHandler.input?.addEventListener("change", () =>
        scanHandler.handleFiles(scanHandler.input?.files),
      );

      // RESET_FILES handler
      scanHandler.btnReset?.addEventListener("click", () => {
        scanHandler.pickedFiles = [];
        scanHandler.renderFiles();
        scanHandler.repoUrl.value = "";
      });

      // START_SCAN handler - Using new /api/v1/dependencies/analyze endpoint
      scanHandler.btnScan?.addEventListener("click", () =>
        scanHandler.startScan(),
      );
      // IMPORT_REPO handler - Using new /api/v1/analyze/job endpoint
      scanHandler.btnImport?.addEventListener("click", () =>
        scanHandler.importRepository(),
      );

      // Tab Handling
      const tabImport = document.getElementById("tab-import");
      const tabUpload = document.getElementById("tab-upload");
      const contentImport = document.getElementById("content-import");
      const contentUpload = document.getElementById("content-upload");

      tabImport?.addEventListener("click", () => {
        tabImport.classList.add(
          "border-purple-500",
          "text-purple-400",
          "bg-purple-500/5",
        );
        tabImport.classList.remove("border-transparent", "text-gray-500");

        tabUpload?.classList.remove(
          "border-cyan-500",
          "text-cyan-400",
          "bg-cyan-500/5",
        );
        tabUpload?.classList.add("border-transparent", "text-gray-500");

        contentImport?.classList.remove("hidden");
        contentUpload?.classList.add("hidden");
      });

      tabUpload?.addEventListener("click", () => {
        tabUpload.classList.add(
          "border-cyan-500",
          "text-cyan-400",
          "bg-cyan-500/5",
        );
        tabUpload.classList.remove("border-transparent", "text-gray-500");

        tabImport?.classList.remove(
          "border-purple-500",
          "text-purple-400",
          "bg-purple-500/5",
        );
        tabImport?.classList.add("border-transparent", "text-gray-500");

        contentUpload?.classList.remove("hidden");
        contentImport?.classList.add("hidden");
      });
    }

    // Initialize when DOM is ready
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initializeHandlers);
    } else {
      initializeHandlers();
    }
  </script>
</Layout>

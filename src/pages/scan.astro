---
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import ScanReportIsland from "../components/report/ScanReportIsland";
---

<Layout
  title="Scan â€” Vulnera"
  description="Upload manifests or import repositories for scanning."
>
  <!-- Server-side middleware handles auth -->

  <Navigation />

  <section
    id="main"
    class="relative min-h-screen overflow-hidden bg-[#050505]"
    aria-labelledby="scan-title"
    transition:animate="fade"
  >
    <!-- Background Layers -->
    <div class="absolute inset-0 z-0 pointer-events-none">
      <div class="absolute inset-0 bg-[url('/grid.png')] opacity-[0.03]"></div>
      <div
        class="absolute inset-0 bg-gradient-to-b from-black via-transparent to-black"
      >
      </div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
      <header class="mb-12 border-b border-white/10 pb-8">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <div
            class="text-green-500/60 font-mono text-xs tracking-widest uppercase"
          >
            System_Ready
          </div>
        </div>
        <h1
          id="scan-title"
          class="text-3xl sm:text-4xl font-bold text-white font-mono tracking-tight"
        >
          VULNERABILITY_SCANNER
        </h1>
        <p class="text-gray-400 mt-3 font-mono text-sm max-w-2xl">
          Initiate deep analysis of dependency manifests or remote repositories.
          Our engine detects vulnerabilities, secrets, and compliance issues.
        </p>
      </header>

      <!-- AI Features Description -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
        <div
          class="bg-white/5 border border-white/10 rounded-sm p-6 hover:border-blue-500/30 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <svg
              class="w-5 h-5 text-blue-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <h3
              class="text-blue-400 font-mono text-sm font-bold tracking-wider uppercase"
            >
              AI_Enrichment
            </h3>
          </div>
          <p class="text-gray-500 text-xs leading-relaxed font-mono">
            Context-aware vulnerability analysis providing impact assessment and
            false positive reduction.
          </p>
        </div>

        <div
          class="bg-white/5 border border-white/10 rounded-sm p-6 hover:border-purple-500/30 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-3">
            <svg
              class="w-5 h-5 text-purple-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
            <h3
              class="text-purple-400 font-mono text-sm font-bold tracking-wider uppercase"
            >
              Auto_Fix
            </h3>
          </div>
          <p class="text-gray-500 text-xs leading-relaxed font-mono">
            Automated patch generation for identified vulnerabilities using
            advanced LLM capabilities.
          </p>
        </div>
      </div>

      <!-- Tabbed Interface -->
      <div
        class="border border-white/10 bg-black/50 backdrop-blur-sm rounded-lg overflow-hidden"
      >
        <!-- Tabs Header -->
        <div class="flex border-b border-white/10">
          <button
            id="tab-import"
            class="flex-1 py-4 text-sm font-mono font-bold uppercase tracking-wider transition-all border-b-2 border-purple-500 text-purple-400 bg-purple-500/5"
          >
            Import_GitHub_Repo
          </button>
          <button
            id="tab-upload"
            class="flex-1 py-4 text-sm font-mono font-bold uppercase tracking-wider transition-all border-b-2 border-transparent text-gray-500 hover:text-gray-300 hover:bg-white/5"
          >
            Upload_Files
          </button>
        </div>

        <!-- Tab Content: Import -->
        <div id="content-import" class="p-8 sm:p-10">
          <div class="max-w-3xl mx-auto">
            <div class="flex flex-col gap-6">
              <div class="relative group/input">
                <input
                  id="repo-url"
                  type="url"
                  placeholder="https://github.com/owner/repo"
                  class="w-full px-6 py-4 bg-black border border-white/10 text-white placeholder-gray-600 font-mono text-base focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500/50 transition-all rounded-md"
                />
                <div
                  class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-600 pointer-events-none text-xs font-bold tracking-wider border border-white/10 px-2 py-1 rounded"
                >
                  GIT
                </div>
              </div>

              <!-- Private Repo & Token Input -->
              <div class="bg-white/5 border border-white/10 rounded-md p-4">
                <label
                  class="flex items-center gap-3 cursor-pointer group/check select-none mb-0"
                >
                  <div class="relative">
                    <input
                      type="checkbox"
                      id="chk-private-repo"
                      class="peer sr-only"
                    />
                    <div
                      class="w-5 h-5 border border-gray-600 rounded bg-black peer-checked:bg-purple-600 peer-checked:border-purple-500 transition-all"
                    >
                    </div>
                    <svg
                      class="absolute inset-0 w-5 h-5 text-white opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none p-0.5"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span
                    class="text-sm text-gray-300 font-mono group-hover/check:text-white transition-colors"
                    >Private Repository</span
                  >
                </label>

                <div
                  id="token-input-container"
                  class="hidden mt-4 pt-4 border-t border-white/10 animate-fade-in"
                >
                  <label
                    for="github-token-input"
                    class="block text-xs text-purple-400 font-mono mb-2 uppercase tracking-wider"
                    >GitHub Token (PAT)</label
                  >
                  <input
                    id="github-token-input"
                    type="password"
                    placeholder="ghp_..."
                    class="w-full px-4 py-3 bg-black border border-purple-500/30 text-white placeholder-gray-700 font-mono text-sm focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500/50 transition-all rounded-md"
                  />
                  <p class="text-[10px] text-gray-500 mt-2 font-mono">
                    Token is used only for this scan and not stored.
                  </p>
                </div>
              </div>

              <div class="flex flex-col sm:flex-row items-center gap-6 mt-2">
                <!-- Analysis Depth Selection -->
                <div class="flex flex-col gap-2 flex-1 w-full">
                  <span
                    class="text-[10px] text-gray-500 font-mono uppercase tracking-widest font-bold"
                    >Analysis Depth</span
                  >
                  <div class="grid grid-cols-3 gap-2">
                    <button
                      data-analysis-depth="minimal"
                      class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-2.5 font-mono text-[10px] font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-md"
                    >
                      MINIMAL
                    </button>
                    <button
                      data-analysis-depth="standard"
                      class="analysis-depth-btn active border border-purple-500/50 bg-purple-500/10 text-purple-400 py-2.5 font-mono text-[10px] font-bold transition-all uppercase rounded-md"
                    >
                      STANDARD
                    </button>
                    <button
                      data-analysis-depth="full"
                      class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-2.5 font-mono text-[10px] font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-md"
                    >
                      FULL
                    </button>
                  </div>
                </div>

                <button
                  id="btn-import"
                  class="w-full sm:w-auto px-8 bg-purple-600 hover:bg-purple-500 text-black font-bold py-3 font-mono text-sm transition-all uppercase tracking-wider flex items-center justify-center gap-2 rounded-md h-[42px] mt-auto"
                >
                  <span class="text-lg">ðŸš€</span>
                  <span>IMPORT_AND_SCAN</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Tab Content: Upload -->
        <div id="content-upload" class="hidden p-8 sm:p-10">
          <div class="max-w-3xl mx-auto">
            <!-- Dropzone -->
            <div
              id="dropzone"
              class="relative border-2 border-dashed border-white/10 bg-black/30 hover:bg-white/5 hover:border-cyan-500/30 transition-all group/drop cursor-pointer flex flex-col items-center justify-center p-12 rounded-lg"
            >
              <div
                class="text-gray-600 mb-4 group-hover/drop:text-cyan-500 transition-colors transform group-hover/drop:scale-110 duration-300"
              >
                <svg
                  class="w-16 h-16"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1"
                    d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                  ></path>
                </svg>
              </div>
              <p class="text-gray-300 text-base font-mono mb-2 font-bold">
                Drag & drop manifests here
              </p>
              <p class="text-gray-600 text-xs font-mono mb-6">
                package.json, requirements.txt, pom.xml
              </p>

              <input id="file-input" type="file" class="sr-only" multiple />
              <label
                for="file-input"
                id="btn-select"
                class="cursor-pointer bg-white/5 border border-white/10 text-cyan-400 px-6 py-2.5 rounded-md font-mono text-xs font-bold hover:bg-cyan-500/10 hover:border-cyan-500 transition-all uppercase"
              >
                BROWSE_FILES
              </label>
            </div>

            <!-- File List -->
            <div class="mt-6 min-h-[20px]">
              <ul
                id="file-list"
                class="text-gray-400 text-xs font-mono space-y-2 max-h-48 overflow-y-auto custom-scrollbar"
              >
              </ul>
            </div>

            <div class="mt-8 flex flex-col sm:flex-row items-center gap-6">
              <!-- Analysis Depth Selection -->
              <div class="flex flex-col gap-2 flex-1 w-full">
                <span
                  class="text-[10px] text-gray-500 font-mono uppercase tracking-widest font-bold"
                  >Analysis Depth</span
                >
                <div class="grid grid-cols-3 gap-2">
                  <button
                    data-analysis-depth="minimal"
                    class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-2.5 font-mono text-[10px] font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-md"
                  >
                    MINIMAL
                  </button>
                  <button
                    data-analysis-depth="standard"
                    class="analysis-depth-btn active border border-cyan-500/50 bg-cyan-500/10 text-cyan-400 py-2.5 font-mono text-[10px] font-bold transition-all uppercase rounded-md"
                  >
                    STANDARD
                  </button>
                  <button
                    data-analysis-depth="full"
                    class="analysis-depth-btn border border-white/10 bg-black text-gray-500 py-2.5 font-mono text-[10px] font-bold hover:bg-white/5 hover:text-gray-300 transition-all uppercase rounded-md"
                  >
                    FULL
                  </button>
                </div>
              </div>

              <div class="flex gap-3 w-full sm:w-auto mt-auto">
                <button
                  id="btn-reset-files"
                  class="px-4 py-3 border border-red-500/30 text-red-500 hover:bg-red-500/10 font-mono text-xs font-bold transition-all uppercase rounded-md"
                  title="Clear Files"
                >
                  CLR
                </button>

                <button
                  id="btn-scan"
                  class="flex-1 sm:flex-none px-8 bg-cyan-600 hover:bg-cyan-500 text-black font-bold py-3 font-mono text-sm transition-all uppercase tracking-wider flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed rounded-md"
                >
                  <span>SCAN_FILES</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Report Island Mount -->
    <div class="mt-0 bg-[#050505] pb-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <ScanReportIsland client:idle />
      </div>
    </div>
  </section>

  <Footer />

  <script>
    import { ScanHandler } from "../modules/scanModule";

    const scanHandler = new ScanHandler(
      document.getElementById("dropzone")!,
      document.getElementById("file-input")! as HTMLInputElement,
      document.getElementById("file-list")!,
      document.getElementById("btn-scan")! as HTMLButtonElement,
      document.getElementById("btn-import")! as HTMLButtonElement,
      document.getElementById("btn-reset-files")! as HTMLButtonElement,
      document.getElementById("repo-url")! as HTMLInputElement,
      document.getElementById("chk-private-repo")! as HTMLInputElement,
      document.getElementById("github-token-input")! as HTMLInputElement,
      document.querySelectorAll(".detail-level-btn"),
      document.querySelectorAll(".analysis-depth-btn"),
    );

    function initializeHandlers() {
      // Disable browser default file-open on drop anywhere
      document.addEventListener("dragover", (e) => e.preventDefault());
      document.addEventListener("drop", (e) => e.preventDefault());

      // Handle detail level selection
      scanHandler.addActiveBTNDetailClass();

      // Handle analysis depth selection
      scanHandler.addActiveBTNAnalysisClass();

      scanHandler.renderFiles();

      // Drag and drop handlers
      scanHandler.dragAndDropSetup();
      scanHandler.input?.addEventListener("change", () =>
        scanHandler.handleFiles(scanHandler.input?.files),
      );

      // RESET_FILES handler
      scanHandler.btnReset?.addEventListener("click", () => {
        scanHandler.pickedFiles = [];
        scanHandler.renderFiles();
        scanHandler.repoUrl.value = "";
      });

      // START_SCAN handler - Using new /api/v1/dependencies/analyze endpoint
      scanHandler.btnScan?.addEventListener("click", () =>
        scanHandler.startScan(),
      );
      // IMPORT_REPO handler - Using new /api/v1/analyze/job endpoint
      scanHandler.btnImport?.addEventListener("click", () =>
        scanHandler.importRepository(),
      );

      // Tab Handling
      const tabImport = document.getElementById("tab-import");
      const tabUpload = document.getElementById("tab-upload");
      const contentImport = document.getElementById("content-import");
      const contentUpload = document.getElementById("content-upload");

      tabImport?.addEventListener("click", () => {
        tabImport.classList.add(
          "border-purple-500",
          "text-purple-400",
          "bg-purple-500/5",
        );
        tabImport.classList.remove("border-transparent", "text-gray-500");

        tabUpload?.classList.remove(
          "border-cyan-500",
          "text-cyan-400",
          "bg-cyan-500/5",
        );
        tabUpload?.classList.add("border-transparent", "text-gray-500");

        contentImport?.classList.remove("hidden");
        contentUpload?.classList.add("hidden");
      });

      tabUpload?.addEventListener("click", () => {
        tabUpload.classList.add(
          "border-cyan-500",
          "text-cyan-400",
          "bg-cyan-500/5",
        );
        tabUpload.classList.remove("border-transparent", "text-gray-500");

        tabImport?.classList.remove(
          "border-purple-500",
          "text-purple-400",
          "bg-purple-500/5",
        );
        tabImport?.classList.add("border-transparent", "text-gray-500");

        contentUpload?.classList.remove("hidden");
        contentImport?.classList.add("hidden");
      });
    }

    // Initialize when DOM is ready
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initializeHandlers);
    } else {
      initializeHandlers();
    }
  </script>
</Layout>

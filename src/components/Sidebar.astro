---
// Mobile Sidebar - This is intentionally minimal for the mobile-first navigation
---

<!-- Mobile Sidebar Overlay -->
<div
  id="mobile-sidebar"
  class="fixed inset-0 z-40 lg:hidden"
  style="display: none;"
  aria-label="Mobile navigation"
>
  <!-- Backdrop -->
  <div
    id="sidebar-backdrop"
    class="absolute inset-0 bg-black/80 backdrop-blur-sm transition-opacity duration-300"
  >
  </div>

  <!-- Sidebar Panel -->
  <aside
    class="absolute top-0 left-0 h-full w-80 bg-gradient-to-b from-black via-cyber-950/30 to-black border-r border-cyber-400/20 shadow-2xl shadow-cyber-400/10 transform transition-transform duration-300"
  >
    <!-- Header -->
    <div class="flex items-center justify-between p-6 border-b border-cyber-400/30 bg-black/50">
      <a href="/" class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-cyber-400 to-matrix-400 flex items-center justify-center text-black font-bold text-xl">
          V
        </div>
        <span class="text-xl font-bold bg-gradient-to-r from-cyber-400 to-matrix-400 bg-clip-text text-transparent">
          VULNERA
        </span>
      </a>
      <button
        id="close-sidebar-btn"
        class="p-2 rounded-lg text-cyber-400 hover:bg-cyber-400/10 transition-colors"
        aria-label="Close menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Navigation Links -->
    <nav class="p-4 space-y-1 overflow-y-auto h-[calc(100vh-120px)]">
      <!-- Home -->
      <a
        href="/"
        class="flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="font-medium">HOME</span>
      </a>

      <!-- Auth Only Links -->
      <a
        href="/dashboard"
        class="sidebar-auth flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
        style="display: none"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="font-medium">DASHBOARD</span>
      </a>

      <a
        id="org-dash-sidebar"
        href="/orgdashboard"
        class="sidebar-auth flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
        style="display: none"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="font-medium">ORGANIZATION</span>
      </a>

      <a
        href="/scan"
        class="sidebar-auth flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
        style="display: none"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        <span class="font-medium">SCAN</span>
      </a>

      <a
        href="/llm"
        class="sidebar-auth flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
        style="display: none"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span class="font-medium">AI ANALYZE</span>
      </a>

      <!-- Docs (Always visible) -->
      <a
        href="https://k5602.github.io/Vulnera/"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <span class="font-medium">DOCS</span>
        <svg class="w-4 h-4 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>

      <a
        href="/settings"
        class="sidebar-auth flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
        style="display: none"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="font-medium">SETTINGS</span>
      </a>

      <!-- Guest Only Links -->
      <div class="sidebar-guest border-t border-cyber-400/20 mt-2 pt-2">
        <a
          href="/pricing"
          class="flex items-center gap-3 px-4 py-3 rounded-lg text-matrix-300 hover:bg-cyber-400/10 hover:text-cyber-400 transition-all group"
        >
          <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <span class="font-medium">PRICING</span>
        </a>

        <a
          href="/login"
          class="flex items-center gap-3 px-4 py-3 rounded-lg text-cyber-400 hover:bg-cyber-400/10 transition-all group font-semibold"
        >
          <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
          </svg>
          <span class="font-medium">LOGIN</span>
        </a>
      </div>

      <!-- Logout Button (Auth Only) -->
      <button
        id="sidebar-logout-btn"
        class="sidebar-auth w-full flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-400/10 transition-all group border-t border-cyber-400/20 mt-2 pt-2"
        style="display: none"
      >
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        <span class="font-medium">LOGOUT</span>
      </button>
    </nav>
  </aside>
</div>

<script>
  import { isAuthenticatedStore, isOrgStore, clearStore } from "../utils/store";
  import { POST } from "../api/api-manage";
  import ENDPOINTS from "../utils/api/endpoints";

  const sidebar = document.getElementById("mobile-sidebar");
  const closeSidebarBtn = document.getElementById("close-sidebar-btn");
  const sidebarBackdrop = document.getElementById("sidebar-backdrop");
  const sidebarLogoutBtn = document.getElementById("sidebar-logout-btn") as HTMLButtonElement;
  const orgDashSidebar = document.getElementById("org-dash-sidebar");

  // Update sidebar visibility
  function updateSidebarVisibility() {
    const authElements = sidebar?.querySelectorAll(".sidebar-auth");
    const guestElements = sidebar?.querySelectorAll(".sidebar-guest");
    const isLoggedIn = isAuthenticatedStore.get();
    const hasOrg = isOrgStore.get();

    if (isLoggedIn) {
      authElements?.forEach((el) => (el as HTMLElement).style.display = "");
      guestElements?.forEach((el) => (el as HTMLElement).style.display = "none");
      
      // Show/hide org dashboard
      if (orgDashSidebar) {
        orgDashSidebar.style.display = hasOrg ? "" : "none";
      }
    } else {
      authElements?.forEach((el) => (el as HTMLElement).style.display = "none");
      guestElements?.forEach((el) => (el as HTMLElement).style.display = "");
    }
  }

  // Open/Close sidebar
  function openSidebar() {
    if (sidebar) {
      sidebar.style.display = "block";
      requestAnimationFrame(() => {
        sidebar?.querySelector("aside")?.style.setProperty("transform", "translateX(0)");
        sidebarBackdrop?.style.setProperty("opacity", "1");
      });
    }
  }

  function closeSidebar() {
    sidebar?.querySelector("aside")?.style.setProperty("transform", "translateX(-100%)");
    sidebarBackdrop?.style.setProperty("opacity", "0");
    setTimeout(() => {
      if (sidebar) sidebar.style.display = "none";
    }, 300);
  }

  // Listen for mobile menu button
  window.addEventListener("DOMContentLoaded", () => {
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    mobileMenuBtn?.addEventListener("click", openSidebar);
  });

  // Close sidebar on backdrop click
  sidebarBackdrop?.addEventListener("click", closeSidebar);
  closeSidebarBtn?.addEventListener("click", closeSidebar);

  // Close sidebar on link click
  sidebar?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", closeSidebar);
  });

  // Handle logout
  sidebarLogoutBtn?.addEventListener("click", async () => {
    try {
      sidebarLogoutBtn.disabled = true;
      sidebarLogoutBtn.textContent = "LOGGING OUT...";
      await POST(ENDPOINTS.AUTH.POST_logout);
      clearStore();
      window.location.href = "/login";
    } catch (error) {
      console.error("Logout error:", error);
      alert("Logout failed. Please try again.");
      sidebarLogoutBtn.disabled = false;
      const span = sidebarLogoutBtn.querySelector("span");
      if (span) span.textContent = "LOGOUT";
    }
  });

  // Subscribe to store changes
  const unsubscribeAuth = isAuthenticatedStore.subscribe(updateSidebarVisibility);
  const unsubscribeOrg = isOrgStore.subscribe(updateSidebarVisibility);

  // Initial update
  updateSidebarVisibility();

  // Cleanup
  window.addEventListener("beforeunload", () => {
    unsubscribeAuth();
    unsubscribeOrg();
  });
</script>

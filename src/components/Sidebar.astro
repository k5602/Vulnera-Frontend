    label: "HOME",
    icon: "home",
    guestOnly: false,
    authOnly: false,
    id: "home-page",
  },
  {
    href: "/dashboard",
    label: "DASHBOARD",
    icon: "dashboard",
    guestOnly: false,
    authOnly: true,
  },
  {
    href: "/orgdashboard",
    label: "ORG_DASHBOARD",
    icon: "dashboard",
    guestOnly: false,
    authOnly: true,
    id: "org-dash-sidebar",
  },
  {
    href: "/scan",
    label: "SCAN",
    icon: "scan",
    guestOnly: false,
    authOnly: true,
  },
  {
    href: "/llm",
    label: "ANALYZE_AI",
    icon: "bot",
    guestOnly: false,
    authOnly: true,
  },
  {
    href: "https://k5602.github.io/Vulnera/",
    label: "DOCS",
    icon: "docs",
    guestOnly: false,
    authOnly: false,
    target: "_blank",
  },
  {
    href: "/settings",
    label: "SETTINGS",
    icon: "settings",
    guestOnly: false,
    authOnly: true,

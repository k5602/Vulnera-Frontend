// Enhanced interactive sidebar with animations and effects

import Logo from "./Logo.astro";

const currentPath = Astro.url.pathname;
const isDocs = currentPath.startsWith("/docs");

interface Link {
  href: string;
  label: string;
  icon: string;
  guestOnly: boolean;
  authOnly: boolean;
  id?: string;
  target?: string;
}


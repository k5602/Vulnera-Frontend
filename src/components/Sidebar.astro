---

<aside
  id="sidebar"
  class:list={[
    "fixed left-0 top-0 h-screen bg-gradient-to-b from-black via-cyber-950/20 to-black backdrop-blur-md border-r border-cyber-500/30 shadow-[0_0_30px_rgba(0,229,209,0.15)] z-30 transition-all duration-300 ease-in-out",
    { "docs-sidebar": isDocs }
  ]}
  aria-label="Main sidebar navigation"
>
  <!-- Main Content Wrapper (Handles overflow for inner content) -->
  <div class="relative w-full h-full overflow-hidden">
    <!-- Animated Background Gradient -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div
        class="absolute top-0 left-0 w-full h-1/3 bg-linear-to-b from-cyber-400/20 to-transparent animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-full h-1/3 bg-linear-to-t from-matrix-400/20 to-transparent animate-pulse"
        style="animation-delay: 1s;"
      >
      </div>
    </div>

    <!-- Vertical Scanline Effect -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden opacity-30">
      <div class="scanline"></div>
    </div>

    <!-- Logo Section with Animation -->
    <div class="px-4 pt-6 pb-4 mb-2 relative border-b border-cyber-500/20">
      <div class="flex items-center justify-center gap-3 relative">
        <Logo class="flex-shrink-0" />
        <div class="sidebar-text opacity-0 pointer-events-none transition-all duration-300 overflow-hidden">
          <span class="text-lg font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyber-400 to-matrix-400 tracking-wider whitespace-nowrap">
            VULNERA
          </span>
          <div class="text-[10px] text-cyber-600 font-mono tracking-widest mt-0.5">
            SECURITY SUITE
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation Links -->
    <nav
      class="flex flex-col gap-1 px-3 py-4 relative z-10 overflow-y-auto scrollbar-thin scrollbar-thumb-cyber-700 scrollbar-track-transparent"
      aria-label="Sidebar navigation"
    >
      {linksToRender.map((link) => (
        <a
          href={link.href}
          class={`sidebar-link group relative flex items-center h-11 px-2 rounded-md hover:bg-gradient-to-r hover:from-cyber-500/10 hover:via-cyber-500/5 hover:to-transparent border border-transparent hover:border-cyber-500/20 transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-cyber-400 overflow-hidden ${link.guestOnly ? 'guest-only' : ''} ${link.authOnly ? 'auth-only' : ''}`}
          data-label={link.label}
          id={link.id}
          style={link.guestOnly || link.authOnly ? 'display: none' : ''}
          target={link.target}
          rel={link.target === "_blank" ? "noopener noreferrer" : undefined}
        >
          <!-- Ripple Effect Container -->
          <span class="ripple-container absolute inset-0 overflow-hidden"></span>

          <!-- Active Indicator -->
          <span
            class="absolute left-0 top-1/2 -translate-y-1/2 w-0.5 h-0 bg-gradient-to-b from-cyber-400 via-cyber-500 to-matrix-400 rounded-r-full transition-all duration-300 group-hover:h-6 shadow-[0_0_8px_rgba(0,229,209,0.6)]"
          ></span>

          <div class="flex items-center justify-center w-12 h-12 relative z-10">
            <svg
              class="w-6 h-6 text-cyber-400 group-hover:text-cyber-300 group-hover:scale-110 transition-all duration-300"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d={icons[link.icon]}
              ></path>
            </svg>
          </div>
          <span
            class="sidebar-text ml-3 text-matrix-300 group-hover:text-cyber-300 whitespace-nowrap opacity-0 pointer-events-none transition-all duration-300 font-mono font-bold tracking-wider relative z-10"
            >{link.label}</span
          >

          <!-- Enhanced Tooltip -->
          <div
            class="sidebar-tooltip absolute left-full ml-3 px-4 py-2 bg-linear-to-r from-black/95 to-cyber-900/50 terminal-border rounded-lg text-cyber-400 text-sm whitespace-nowrap opacity-0 pointer-events-none transition-all duration-200 z-50 shadow-lg"
          >
            <span class="font-mono">{link.label}</span>
            <div
              class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-1/2 w-2 h-2 bg-cyber-400 rounded-full animate-ping"
            >
            </div>
          </div>
        </a>
      ))}

      <!-- Logout (auth only) -->
      <button
        id="sidebar-logout-btn"
        class="sidebar-link auth-only group relative flex items-center h-11 px-2 rounded-md hover:bg-gradient-to-r hover:from-red-500/10 hover:via-red-500/5 hover:to-transparent border border-transparent hover:border-red-500/20 transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-red-400 w-full overflow-hidden mt-auto"
        data-label="Logout"
        style="display: none"
      >
        <!-- Ripple Effect Container -->
        <span class="ripple-container absolute inset-0 overflow-hidden"></span>

        <!-- Active Indicator -->
        <span
          class="absolute left-0 top-1/2 -translate-y-1/2 w-0.5 h-0 bg-gradient-to-b from-red-500 to-red-700 rounded-r-full transition-all duration-300 group-hover:h-6 shadow-[0_0_8px_rgba(239,68,68,0.6)]"
        ></span>

        <div class="flex items-center justify-center w-12 h-12 relative z-10">
          <svg
            class="w-6 h-6 text-red-400 group-hover:text-red-300 group-hover:scale-110 group-hover:translate-x-1 transition-all duration-300"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d={icons.logout}
            ></path>
          </svg>
        </div>
        <span
          class="sidebar-text ml-3 text-red-300 group-hover:text-red-200 whitespace-nowrap opacity-0 pointer-events-none transition-all duration-300 font-mono font-bold tracking-wider relative z-10"
          >LOGOUT</span
        >

        <!-- Enhanced Tooltip -->
        <div
          class="sidebar-tooltip absolute left-full ml-3 px-4 py-2 bg-linear-to-r from-black/95 to-red-900/50 terminal-border rounded-lg text-red-400 text-sm whitespace-nowrap opacity-0 pointer-events-none transition-all duration-200 z-50 shadow-lg"
        >
          <span class="font-mono">Logout</span>
          <div
            class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-1/2 w-2 h-2 bg-red-400 rounded-full animate-ping"
          >
          </div>
        </div>
      </button>
    </nav>
  </div>

  <!-- Toggle Button with Animation (Moved outside wrapper) -->
  
</aside>

<style>
  /* Sidebar default (hidden/drawer) state */
  #sidebar {
    width: 240px;
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
  }

  /* Open state (triggered by mobile-open class) */
  #sidebar.mobile-open {
    transform: translateX(0);
  }

  /* Ensure text is always visible in drawer mode */
  .sidebar-text {
    opacity: 1;
    pointer-events: auto;
    transform: translateX(0);
  }

  /* Scanline animation */
  .scanline {
    position: absolute;
    top: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(0, 229, 209, 0.03) 45%,
      rgba(0, 229, 209, 0.08) 50%,
      rgba(0, 229, 209, 0.03) 55%,
      transparent 100%
    );
    animation: scan-down 8s linear infinite;
  }

  @keyframes scan-down {
    0% {
      top: -100%;
    }
    100% {
      top: 100%;
    }
  }

  /* Active link indicator */
  .sidebar-link[aria-current="page"] {
    background: linear-gradient(90deg, rgba(0, 229, 209, 0.15), transparent);
    border-color: rgba(0, 229, 209, 0.4);
    box-shadow: 0 0 15px rgba(0, 229, 209, 0.2);
  }

  .sidebar-link[aria-current="page"] .absolute.left-0 {
    height: 1.5rem !important;
  }

  /* Ripple effect animation */
  @keyframes ripple {
    0% {
      transform: scale(0);
      opacity: 0.5;
    }
    100% {
      transform: scale(4);
      opacity: 0;
    }
  }

  .ripple {
    position: absolute;
    border-radius: 50%;
    background: rgba(26, 255, 239, 0.5);
    pointer-events: none;
    animation: ripple 0.6s ease-out;
  }

  /* Glowing effect on hover */
  .sidebar-link:hover {
    box-shadow: inset 0 0 20px rgba(26, 255, 239, 0.1);
  }

  /* Icon animations */
  .sidebar-link svg {
    filter: drop-shadow(0 0 0px rgba(26, 255, 239, 0));
    transition: filter 0.3s ease-in-out;
  }

  .sidebar-link:hover svg {
    filter: drop-shadow(0 0 8px rgba(26, 255, 239, 0.6));
  }

  /* Scrollbar styling */
  #sidebar nav::-webkit-scrollbar {
    width: 4px;
  }

  #sidebar nav::-webkit-scrollbar-track {
    background: rgba(26, 255, 239, 0.05);
  }

  #sidebar nav::-webkit-scrollbar-thumb {
    background: rgba(26, 255, 239, 0.3);
    border-radius: 2px;
  }

  #sidebar nav::-webkit-scrollbar-thumb:hover {
    background: rgba(26, 255, 239, 0.5);
  }

  /* Persistent sidebar for docs on large screens */
  @media (min-width: 1536px) {
    #sidebar.docs-sidebar {
      transform: translateX(0) !important;
    }
  }

  body.vt-preload #sidebar {
    opacity: 0 !important;
    transform: translateX(-100%) !important;
    pointer-events: none !important;
  }
</style>

<script>
  // Sidebar functionality
  const sidebar = document.getElementById("sidebar");
  const sidebarLinks = document.querySelectorAll(".sidebar-link");

  // Ripple effect function
  function createRipple(event: MouseEvent, element: HTMLElement) {
    const rippleContainer = element.querySelector(".ripple-container");
    if (!rippleContainer) return;

    const ripple = document.createElement("span");
    const rect = rippleContainer.getBoundingClientRect();
    const size = Math.max(rect.width, rect.height);
    const x = event.clientX - rect.left - size / 2;
    const y = event.clientY - rect.top - size / 2;

    ripple.style.width = ripple.style.height = `${size}px`;
    ripple.style.left = `${x}px`;
    ripple.style.top = `${y}px`;
    ripple.classList.add("ripple");

    rippleContainer.appendChild(ripple);

    setTimeout(() => ripple.remove(), 600);
  }

  // Add ripple effect to all sidebar links
  sidebarLinks.forEach((link) => {
    link.addEventListener("click", (e) => {
      createRipple(e as MouseEvent, link as HTMLElement);
    });
  });

  // Highlight active page
  const currentPath = window.location.pathname;
  sidebarLinks.forEach((link) => {
    const href = link.getAttribute("href");
    if (href === currentPath || (href === "/" && currentPath === "/")) {
      link.setAttribute("aria-current", "page");
    }
  });

  import { POST } from "../api/api-manage";
  // Auth-based visibility
  import ENDPOINTS from "../utils/api/endpoints";
  import { isAuthenticatedStore, isOrgStore } from "../utils/store";

  let isOrganization = isOrgStore.get();

  function updateSidebarVisibility() {
    const authElements = sidebar?.querySelectorAll(".auth-only");
    const guestElements = sidebar?.querySelectorAll(".guest-only");
    const homeElement = document.getElementById("home-page");
    const orgDashSidebar = document.getElementById("org-dash-sidebar");
    const isLoggedIn = isAuthenticatedStore.get();

    if (isLoggedIn) {
      authElements?.forEach((el) =>
        (el as HTMLElement).style.removeProperty("display"),
      );
      guestElements?.forEach(
        (el) => ((el as HTMLElement).style.display = "none"),
      );
      if (homeElement) homeElement.style.display = "none";

      // Show organization dashboard link only if user is in an organization
      if (isOrganization && orgDashSidebar) {
        orgDashSidebar.style.removeProperty("display");
      } else if (orgDashSidebar) {
        orgDashSidebar.style.display = "none";
      }
    } else {
      authElements?.forEach(
        (el) => ((el as HTMLElement).style.display = "none"),
      );
      guestElements?.forEach((el) =>
        (el as HTMLElement).style.removeProperty("display"),
      );
      if (orgDashSidebar) {
        orgDashSidebar.style.display = "none";
      }
    }
  }

  // Logout functionality
  async function handleLogout() {
    await POST(ENDPOINTS.AUTH.POST_logout, {});
    window.location.href = "/login";
  }

  // Initialize on load
  updateSidebarVisibility();

  // Setup logout button
  const logoutBtn = document.getElementById("sidebar-logout-btn");
  logoutBtn?.addEventListener("click", handleLogout);

  // Listen for storage changes (multi-tab sync)
  window.addEventListener("storage", updateSidebarVisibility);

  // Mobile menu toggle (triggered from Navigation component)
  window.addEventListener("toggle-mobile-sidebar", () => {
    sidebar?.classList.toggle("mobile-open");
  });

  // Close sidebar when clicking outside
  document.addEventListener("click", (e) => {
    if (
      sidebar?.classList.contains("mobile-open") &&
      !sidebar.contains(e.target as Node) &&
      !(e.target as HTMLElement)?.closest("#menu-toggle")
    ) {
      sidebar?.classList.remove("mobile-open");
    }
  });
</script> 
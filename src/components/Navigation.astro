---
import Logo from "./Logo.astro";
---

<nav
  class="fixed top-0 left-0 right-0 z-50 bg-black/90 backdrop-blur-md border-b border-cyber-400/20"
  aria-label="Main navigation"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo & Brand -->
      <div class="flex items-center gap-3">
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 rounded-lg text-cyber-400 hover:bg-cyber-400/10 transition-colors"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        <a href="/" class="flex items-center gap-2 group">
          <Logo class="w-8 h-8" />
          <span
            class="text-xl font-bold bg-gradient-to-r from-cyber-400 to-matrix-400 bg-clip-text text-transparent"
          >
            VULNERA
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-6">
        <a
          href="/"
          class="text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          HOME
        </a>
        <a
          href="https://k5602.github.io/Vulnera/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          DOCS
        </a>
        
        <!-- Guest Only Links -->
        <a
          href="/pricing"
          class="nav-guest text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          PRICING
        </a>
        <a
          href="/login"
          class="nav-guest px-4 py-2 rounded-lg border border-cyber-400/50 text-cyber-400 hover:bg-cyber-400/10 transition-all font-medium text-sm"
        >
          LOGIN
        </a>
        <a
          href="/signup"
          class="nav-guest px-4 py-2 rounded-lg bg-gradient-to-r from-cyber-400 to-matrix-400 text-black hover:shadow-lg hover:shadow-cyber-400/50 transition-all font-bold text-sm"
        >
          SIGN UP
        </a>

        <!-- Auth Only Links -->
        <a
          href="/dashboard"
          class="nav-auth hidden text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          DASHBOARD
        </a>
        <a
          id="org-dash-nav"
          href="/orgdashboard"
          class="nav-auth hidden text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          ORGANIZATION
        </a>
        <a
          href="/scan"
          class="nav-auth hidden text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          SCAN
        </a>
        <a
          href="/llm"
          class="nav-auth hidden text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          AI ANALYZE
        </a>
        <a
          href="/settings"
          class="nav-auth hidden text-sm text-matrix-300 hover:text-cyber-400 transition-colors font-medium"
        >
          SETTINGS
        </a>
        <button
          id="logout-btn"
          class="nav-auth hidden px-4 py-2 rounded-lg border border-red-400/50 text-red-400 hover:bg-red-400/10 transition-all font-medium text-sm"
        >
          LOGOUT
        </button>
      </div>
    </div>
  </div>
</nav>

<script>
  import { isAuthenticatedStore, isOrgStore, clearStore, csrfTokenStore } from "../utils/store";
  import { POST } from "../api/api-manage";
  import ENDPOINTS from "../utils/api/endpoints";

  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const logoutBtn = document.getElementById("logout-btn") as HTMLButtonElement;
  const orgDashNav = document.getElementById("org-dash-nav");

  // Update navigation visibility based on auth state
  function updateNavVisibility() {
    const authElements = document.querySelectorAll(".nav-auth");
    const guestElements = document.querySelectorAll(".nav-guest");
    const isLoggedIn = isAuthenticatedStore.get();
    const hasOrg = isOrgStore.get();
    
    // Also check CSRF token - if missing, treat as logged out
    const hasCsrf = csrfTokenStore.get() !== null;
    const isActuallyAuthenticated = isLoggedIn && hasCsrf;

    if (isActuallyAuthenticated) {
      authElements.forEach((el) => (el as HTMLElement).classList.remove("hidden"));
      guestElements.forEach((el) => (el as HTMLElement).classList.add("hidden"));
      
      // Show/hide org dashboard based on org status
      if (orgDashNav) {
        orgDashNav.style.display = hasOrg ? "" : "none";
      }
    } else {
      authElements.forEach((el) => (el as HTMLElement).classList.add("hidden"));
      guestElements.forEach((el) => (el as HTMLElement).classList.remove("hidden"));
    }
  }

  // Handle mobile menu toggle
  mobileMenuBtn?.addEventListener("click", () => {
    const sidebar = document.getElementById("mobile-sidebar");
    const isOpen = sidebar?.classList.toggle("sidebar-open");
    mobileMenuBtn.setAttribute("aria-expanded", isOpen ? "true" : "false");
  });

  // Handle logout
  logoutBtn?.addEventListener("click", async () => {
    try {
      logoutBtn.disabled = true;
      logoutBtn.textContent = "LOGGING OUT...";
      await POST(ENDPOINTS.AUTH.POST_logout);
      clearStore();
      window.location.href = "/login";
    } catch (error) {
      console.error("Logout error:", error);
      alert("Logout failed. Please try again.");
      logoutBtn.disabled = false;
      logoutBtn.textContent = "LOGOUT";
    }
  });

  // Subscribe to store changes
  const unsubscribeAuth = isAuthenticatedStore.subscribe(updateNavVisibility);
  const unsubscribeOrg = isOrgStore.subscribe(updateNavVisibility);

  // Initial update
  updateNavVisibility();

  // Cleanup
  window.addEventListener("beforeunload", () => {
    unsubscribeAuth();
    unsubscribeOrg();
  });
</script>
# Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# Backend API Base URL
# This is the URL of your backend API server
# Examples:
#   - Local development: http://localhost:8000
#   - Production: https://api.yourdomain.com
PUBLIC_API_BASE=http://localhost:8000

# Force using the PUBLIC_API_BASE URL directly (set to true to override same-origin fallback)
# Set to true if you want to always use the PUBLIC_API_BASE URL regardless of the environment
PUBLIC_FORCE_API_BASE=false

# API Request Timeout (in milliseconds)
# Default: 30000 (30 seconds)
PUBLIC_API_TIMEOUT=30000
